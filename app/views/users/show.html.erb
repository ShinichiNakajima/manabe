<%= render "shared/header" %>


<h1>ブックマークリスト</h1>
<% if @user.bookmarks %>
  <ul>
    <% @user.bookmarks.each do |bookmark| %>
      <li>
      <%= link_to bookmark.title, bookmark_path(bookmark.id) %>
      <%= link_to "削除", bookmark_path(bookmark.id), method: :delete, data: {confirm: "このブックマークを削除しますか？"}, class: "deletebutton" %>
      <br>
      (作成日時：<%= l bookmark.created_at %>)
      </li>
    <% end %>
  </ul>
<% else %>
  <%= "empty" %>
<% end %>